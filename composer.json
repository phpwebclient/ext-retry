{
  "name": "webclient/ext-retry",
  "type": "library",
  "description": "Retry extension for PSR-18 HTTP client",
  "keywords": ["http", "client", "http-client", "http-client-extension", "retry"],
  "license": "MIT",
  "authors": [
    {
      "name": "Ivan Dudarev",
      "email": "ivan@ddrv.ru",
      "homepage": "https://ddrv.ru"
    }
  ],
  "require": {
    "php": "^7.0 || ^8.0",
    "psr/http-client": "^1.0"
  },
  "require-dev": {
    "ext-json": "*",
    "nyholm/psr7": "^1.3",
    "phpunit/phpunit": "^6.5 || ^7.5 || ^8.5 || ^9.5",
    "squizlabs/php_codesniffer": "^3.5",
    "webclient/fake-http-client": "^1.0"
  },
  "provide": {
    "psr/http-client-implementation": "1.0"
  },
  "suggest": {
    "psr/http-client-implementation": "Choice your favorite psr-18 implementation"
  },
  "autoload": {
    "psr-4": {
      "Webclient\\Extension\\Retry\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Stuff\\Webclient\\Extension\\Retry\\": "stuff/",
      "Tests\\Webclient\\Extension\\Retry\\": "tests/"
    }
  }
}
